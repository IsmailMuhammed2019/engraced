# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/database_name?schema=public
POSTGRES_DB=engracedsmile_db
POSTGRES_USER=engracedsmile
POSTGRES_PASSWORD=your_strong_database_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d

# Application Configuration
PORT=3003
NODE_ENV=production
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password_here

# Paystack Payment Integration
PAYSTACK_SECRET_KEY=sk_live_your_actual_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_live_your_actual_public_key_here
PAYSTACK_CALLBACK_URL=https://engracedsmile.com/api/payments/verify
PAYSTACK_WEBHOOK_URL=https://engracedsmile.com/api/payments/webhook

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
